<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.idealtechnologies.app.mainhuna.activities.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:queryHint="Search your desired services!"
            android:layout_marginTop="20px"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="25px"
            android:layout_marginRight="25px"
            android:background="#DCDCDC"
            android:focusedByDefault="true"
            android:tooltipText="Search"
            android:focusableInTouchMode="true"

            ></SearchView>

        



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginLeft="25px"
        android:layout_marginRight="25px"
        android:layout_marginTop="20px">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="350px"
                android:layout_height="280px"
                android:src="@drawable/known"
                android:layout_marginRight="5px"/>

            <ImageView
                android:layout_width="350px"
                android:layout_height="280px"
                android:src="@drawable/kimme"
                android:layout_marginLeft="5px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="350px"
                android:layout_height="50px"
                android:text="Exterior Paints"
                android:layout_marginRight="5px"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:layout_width="350px"
                android:layout_height="50px"
                android:layout_marginLeft="5px"
                android:text="Kimme"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="350px"
                android:layout_height="280px"
                android:src="@drawable/ext"
                android:layout_marginRight="5px"/>

            <ImageView
                android:layout_width="350px"
                android:layout_height="280px"
                android:src="@drawable/images"
                android:layout_marginLeft="5px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="350px"
                android:layout_height="50px"
                android:layout_marginRight="5px"
                android:text="Metro"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:layout_width="350px"
                android:layout_height="50px"
                android:layout_marginLeft="5px"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Choice Foods"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="350px"
                android:layout_height="280px"
                android:src="@drawable/images1"
                android:layout_marginRight="5px"/>

            <ImageView
                android:layout_width="350px"
                android:layout_height="280px"
                android:layout_marginLeft="5px"
                android:src="@drawable/lion"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="350px"
                android:layout_height="50px"
                android:layout_marginRight="5px"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Catering Cleaing .Co"/>
            <TextView
                android:layout_width="350px"
                android:layout_height="50px"
                android:layout_marginLeft="5px"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Lionhead Grocries"/>
        </LinearLayout>
    </LinearLayout>

    <!--GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:columnWidth="200dp"
        android:numColumns="auto_fit"
        android:horizontalSpacing="10px"
        android:verticalSpacing="10px"
        android:layout_marginLeft="25px"
        android:layout_marginRight="25px"
        android:layout_marginBottom="10px"
        android:gravity="center">

    </GridView-->

</LinearLayout>
